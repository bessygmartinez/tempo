<div id="home">
  <div class="container overlay-color">
    <div class="row">
      <div class="col-12">
        {{!-- <h1>{{msg}}</h1> --}}
        {{!-- <div class="text-center"><img src="/img/Tempo_logo.png" height="300"><p>KEEPING IT UP WITH IT.</p></div> --}}
        <div class="jumbotron my-0 overlay-white">

          <div class="row mb-0">
            <div class="col-12">
              <h1 class="display-3">Featured Artist</h1>
            </div>
          </div>

        </div>
        <div class="container  overlay-color">
          <div class="row mt-0">
            <div class="col-12 text-center my-0">
              <div class="jumbotron my-0 pt-3 overlay-white">
                <a href="/bands/{{bandName}}"><h1 class="display-2 band-name">{{bandName}}</h1></a>
              
                <hr>
                <div class="col-6 float-left">
                  <img src="{{bandPhotoURL}}" width="600" class="img-fluid border border-secondary">
                  <button id="tour-dates-btn" type="button" class="btn btn-lg btn-block btn-success my-4"
                    data-dismiss="modal">Tour
                    Dates</button>
                </div>
                <div class="col-6 float-right">
                  <p class="text-justify band-info"><strong>Hometown:</strong> {{bandHometown}}</p>
                  <p class="text-justify band-info"><strong>Genre:</strong> {{bandGenre}}</p>
                  <p class="text-justify band-info"><strong>Bio:</strong> {{bandBio}}</p>
                </div>
                <div class="clearfix"></div>
                <div class="col-12 my-4">
                  <hr>

              </div>
            </div>

          </div>
        </div>

      </div>

      <!-- Modal for tour dates -->
      <div id="tour-dates" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-scrollable modal-lg" role="list">
          <div class="modal-content">
            <div class="modal-header">
              <h3 class="modal-title text-center"><strong>{{bandName}} Tour Dates</strong></h3>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              </button>
            </div>
            <div class="modal-body text-center">
              <div class="col-12 text-left">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th scope="col">Venue</th>
                      <th scope="col">Location</th>
                      <th scope="col">Date</th>
                      <th scope="col">Time</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each tours}}
                    <tr>
                      <td>{{this.tourVenue}}</td>
                      <td>{{this.tourCity}}, {{tourState}}</td>
                      {{#if tourDate}}
                      <td>{{this.tourDate}}</td>
                      {{else}}
                      <td>TBA</td>
                      {{/if}}
                      {{#if tourTime}}
                      <td>{{this.tourTime}}</td>
                      {{else}}
                      <td>TBA</td>
                      {{/if}}
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>

            </div>
            <div class="modal-footer text-right">
              <button type="button" class="btn btn-lg btn-success" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
