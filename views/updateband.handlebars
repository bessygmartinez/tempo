<div class="container overlay-color">
  <div class="row mt-0">
    <div class="col-12">
      <div class="jumbotron my-0 overlay-white pt-5">

        <div class="row mb-1 mt-0">
          <div class="col-12">
            <h1 class="display-4 band-name">UPDATE BAND</h1>
            <hr>
          </div>
        </div>

        <div class="row">
          <div class="col-12 text-left">
            <form class="clearfix my-3" action="POST">

             <label class="input-group-text bg-success text-white col-3" for="bandGenre">Genre</label>
              <div class="input-group mb-5">
                <div class="input-group-prepend">
            
                </div>
                <select class="custom-select" id="bandGenre">
                  <option value="Electronic">Electronic</option>
                  <option value="HipHop/R&B">HipHop/R&B</option>
                  <option value="Jazz">Jazz</option>
                  <option value="Pop">Pop</option>
                  <option value="Rock">Rock</option>
                </select>
              </div>

            <span class="input-group-text bg-success text-white col-3" id="bandNameLabel">Name</span>
              <div class="input-group mb-5">
                <div class="input-group-prepend">
                </div>
                <input type="text" class="form-control" id="bandName" value={{bandName}} required>
              </div>

            <span class="input-group-text bg-success text-white col-3" id="bandPhotoLabel">Photo URL</span>
              <div class="input-group mb-5">
                <div class="input-group-prepend">
                </div>
                <input type="text" class="form-control" value={{bandPhotoURL}} id="bandPhotoURL"
                  required>
              </div>

            <span class="input-group-text bg-success text-white col-3" id="bandHometownLabel">Hometown</span>
              <div class="input-group mb-5">
                <div class="input-group-prepend">
                  
                </div>
                <input type="text" class="form-control" value={{bandHometown}} id="bandHometown"
                  required>
              </div>

            <span class="input-group-text bg-success text-white col-3" id="bandBioLabel">Short Bio</span>
              <div class="input-group mb-5">
                <div class="input-group-prepend">

                </div>
                <textarea class="form-control" value={{bandBio}} id="bandBio"
                  required></textarea>
              </div>

            <span class="input-group-text bg-success text-white col-3" id="bandDiscogLabel">Discography</span>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">Album #1 Title</span>
                </div>
                <input type="text" class="form-control" placeholder="Album #1 Title" id="discogTitle">

                <div class="input-group-prepend">
                  <span class="input-group-text">Album #1 Year</span>
                </div>
                <input type="text" class="form-control" placeholder="Album #1 Year" id="discogYear">

                <div class="input-group-prepend">
                  <span class="input-group-text">Album #1 Tracks</span>
                </div>
                <input type="text" class="form-control" placeholder="(Number of Tracks)" id="discogTracks">                          
              </div>

              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">Album #2 Title</span>
                </div>
                <input type="text" class="form-control" placeholder="Album #2 Title" id="discogTitle">

                <div class="input-group-prepend">
                  <span class="input-group-text">Album #2 Year</span>
                </div>
                <input type="text" class="form-control" placeholder="Album #2 Year" id="discogYear">

                <div class="input-group-prepend">
                  <span class="input-group-text">Album #2 Track #</span>
                </div>
                <input type="text" class="form-control" placeholder="(Number of Tracks)" id="discogTracks">                          
              </div>

                            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">Album #3 Title</span>
                </div>
                <input type="text" class="form-control" placeholder="Album #3 Title" id="discogTitle">

                <div class="input-group-prepend">
                  <span class="input-group-text">Album #3 Year</span>
                </div>
                <input type="text" class="form-control" placeholder="Album #3 Year" id="discogYear">

                <div class="input-group-prepend">
                  <span class="input-group-text">Album #3 Track #</span>
                </div>
                <input type="text" class="form-control" placeholder="(Number of Tracks)" id="discogTracks">                          
              </div>

              <button id="submitNewband" class="btn btn-success float-right">Update</button>
            </form>

